<section class="form-auth text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "email address", autocomplete: "current-email" %>

   <label for="inputPassword" class="sr-only">password</label>
  <%= f.password_field :password, autofocus: true, class: "form-control", id: "inputPassword", placeholder: "password", autocomplete: "current-password" %>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <div><%= f.submit "Sign In", class:"btn btn-primary"%></div>
  <p class="mt-5 mb-3 text-muted">Â© 2017-2020</p>
<% end %>

<%= render "devise/shared/links" %>
</section>


